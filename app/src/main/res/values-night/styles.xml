<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dark theme application theme -->
    <style name="ThemeName" parent="OneUITheme">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="android:statusBarColor">@color/status_bar_color</item>
        <item name="android:navigationBarColor">@color/navigation_bar_color</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:colorBackground">@color/background_color</item>
        <item name="colorSurface">@color/surface_color</item>
    </style>

    <!-- OneUI Card styles - إزالة الخلفية الصريحة -->
    <style name="CardViewStyle" parent="CardView">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="android:layout_margin">@dimen/card_margin</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">false</item>
        <!-- إزالة cardBackgroundColor للسماح للنظام بإدارة اللون تلقائياً -->
    </style>

    <!-- نمط بطاقة شفاف للـ OneUI -->
    <style name="OneUICardStyle" parent="CardView">
        <item name="cardCornerRadius">@dimen/oneui_card_radius</item>
        <item name="cardElevation">@dimen/oneui_card_elevation</item>
        <item name="android:layout_margin">@dimen/oneui_card_margin</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Text styles محدث -->
    <style name="TextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextStyle.Title" parent="TextStyle">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="TextStyle.Subtitle" parent="TextStyle">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <style name="TextStyle.Body" parent="TextStyle">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <!-- Button styles محسن -->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">@dimen/oneui_button_radius</item>
        <item name="android:minHeight">@dimen/oneui_button_height</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonStyle.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/primary_color</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="cornerRadius">@dimen/oneui_button_radius</item>
        <item name="android:minHeight">@dimen/oneui_button_height</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Toolbar styles محسن -->
    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:minHeight">@dimen/toolbar_height</item>
        <item name="titleTextColor">@color/text_primary</item>
        <item name="subtitleTextColor">@color/text_secondary</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="android:background">@color/primary_color</item>
    </style>

    <!-- OneUI specific styles محدث -->
    <style name="OneUIDrawerStyle">
        <item name="android:background">@color/surface_color</item>
        <item name="android:padding">@dimen/oneui_option_padding</item>
        <item name="android:elevation">@dimen/oneui_drawer_elevation</item>
    </style>

    <style name="OneUIOptionStyle">
        <item name="android:minHeight">@dimen/oneui_item_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/oneui_option_padding</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- نمط القائمة المتدفقة OneUI -->
    <style name="OneUIListStyle">
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
    </style>

    <!-- نمط العنصر في القائمة -->
    <style name="OneUIListItemStyle">
        <item name="android:minHeight">@dimen/oneui_item_height</item>
        <item name="android:paddingStart">@dimen/oneui_list_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/oneui_list_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/oneui_list_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/oneui_list_padding_vertical</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>
