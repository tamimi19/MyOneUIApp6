<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="OneUITheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/oneui_blue</item>
        <item name="colorPrimaryVariant">@color/oneui_blue_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>
        
        <item name="colorSecondary">@color/oneui_accent</item>
        <item name="colorSecondaryVariant">@color/oneui_accent_dark</item>
        <item name="colorOnSecondary">@android:color/black</item>
        
        <item name="android:statusBarColor">@color/oneui_blue_dark</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        
        <item name="android:windowBackground">@android:color/black</item>
        <item name="colorSurface">@color/oneui_surface</item>
        <item name="colorOnSurface">@android:color/white</item>
        
        <item name="buttonStyle">@style/OneUIButton</item>
        <item name="materialButtonStyle">@style/OneUIButton</item>
        
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@color/oneui_text_secondary</item>
        
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    <style name="OneUIButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/oneui_button_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
