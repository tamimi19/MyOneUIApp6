<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="ThemeName" parent="SamsungTheme">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="android:statusBarColor">@color/status_bar_color</item>
        <item name="android:navigationBarColor">@color/navigation_bar_color</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <!-- Card styles -->
    <style name="CardViewStyle" parent="CardView">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="android:layout_margin">@dimen/card_margin</item>
    </style>

    <!-- Text styles -->
    <style name="TextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextStyle.Title" parent="TextStyle">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle.Subtitle" parent="TextStyle">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextStyle.Body" parent="TextStyle">
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <!-- Button styles -->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">@dimen/card_corner_radius</item>
    </style>

    <style name="ButtonStyle.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/primary_color</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="cornerRadius">@dimen/card_corner_radius</item>
    </style>

    <!-- Toolbar styles -->
    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:minHeight">@dimen/toolbar_height</item>
        <item name="titleTextColor">@color/text_primary</item>
        <item name="subtitleTextColor">@color/text_secondary</item>
    </style>

    <!-- OneUI specific styles -->
    <style name="OneUIDrawerStyle">
        <item name="android:background">@color/surface_color</item>
        <item name="android:padding">@dimen/oneui_option_padding</item>
    </style>

    <style name="OneUIOptionStyle">
        <item name="android:minHeight">@dimen/oneui_item_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/oneui_option_padding</item>
    </style>
</resources>
