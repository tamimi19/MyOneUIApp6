<?xml version="1.0" encoding="utf-8"?>
<de.dlyt.yanndroid.samsung.layout.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:drawer_icon="@drawable/ic_drawer"
    app:drawer_viewId="@id/drawer_content"
    app:toolbar_title="@string/app_name"
    app:toolbar_subtitle="@string/app_subtitle"
    app:toolbar_expanded="true"
    app:toolbar_expandable="true">

    <!-- Drawer Content -->
    <LinearLayout
        android:id="@+id/drawer_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <de.dlyt.yanndroid.samsung.drawer.OptionGroup
            android:id="@+id/option_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:selectedOptionButton="@id/option_home">

            <de.dlyt.yanndroid.samsung.drawer.OptionButton
                android:id="@+id/option_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:text="@string/nav_home" />

            <de.dlyt.yanndroid.samsung.drawer.Divider
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginVertical="2dp" />

            <de.dlyt.yanndroid.samsung.drawer.OptionButton
                android:id="@+id/option_scroll_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:text="@string/nav_scroll_list" />

            <de.dlyt.yanndroid.samsung.drawer.Divider
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginVertical="2dp" />

            <de.dlyt.yanndroid.samsung.drawer.OptionButton
                android:id="@+id/option_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:text="@string/nav_settings" />

        </de.dlyt.yanndroid.samsung.drawer.OptionGroup>

    </LinearLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nestedScrollingEnabled="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/welcome_message"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                android:layout_marginBottom="16dp" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/welcome_description"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:layout_marginBottom="32dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/card_title_features"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/card_description_features"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</de.dlyt.yanndroid.samsung.layout.DrawerLayout>
